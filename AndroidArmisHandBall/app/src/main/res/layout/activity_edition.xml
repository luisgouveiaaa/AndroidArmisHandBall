<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.debs.androidarmishandball.activity.EditionActivity">

    <LinearLayout
        android:id="@+id/edition_info_header"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.8"
        android:background="@color/colorPrimary"
        android:elevation="3dp"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/edition_tournament_logo"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:layout_marginTop="8dp"
            android:adjustViewBounds="true"
            android:padding="15dp"
            android:src="@drawable/tournament_white_icon" />

        <TextView
            android:id="@+id/edition_tournament_name"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="TOURNAMENT"
            android:textColor="@android:color/white"
            android:textStyle="bold"
            android:textSize="17sp" />

        <TextView
            android:id="@+id/edition_date"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="2016/2017"
            android:textColor="@android:color/white"
            android:textSize="15sp" />

    </LinearLayout>

    <android.support.design.widget.TabLayout
        android:id="@+id/match_days_tab"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.4"
        android:elevation="3dp"
        android:background="@color/colorPrimary"
        app:tabMode="scrollable">

    </android.support.design.widget.TabLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/edition_matchdays_view"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="5">

    </android.support.v7.widget.RecyclerView>
</LinearLayout>
