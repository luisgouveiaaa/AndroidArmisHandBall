<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.debs.androidarmishandball.activity.TournamentActivity">

    <LinearLayout
        android:id="@+id/Tournament_info_header"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@color/colorPrimary"
        android:elevation="3dp"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/tournament_logo"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:adjustViewBounds="true"
            android:padding="15dp"
            android:src="@drawable/tournament_white_icon" />

        <TextView
            android:id="@+id/tournament_name"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="TOURNAMENT"
            android:textColor="@android:color/white"
            android:textSize="17sp" />

    </LinearLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/tournament_editions_view"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2">

    </android.support.v7.widget.RecyclerView>
</LinearLayout>
