<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.debs.androidarmishandball.activity.FavoritesFragment">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="match_parent"
           android:orientation="vertical">
           <TextView
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:text="Tournaments"
               android:textSize="25dp"
               android:textStyle="bold"/>

           <com.example.debs.androidarmishandball.activity.NestedListView
               android:id="@+id/favorite_tournaments_list"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"/>

           <TextView
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:text="Clubs"
               android:textSize="25dp"
               android:textStyle="bold"/>

           <com.example.debs.androidarmishandball.activity.NestedListView
               android:id="@+id/favorite_clubs_list"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"/>

           <TextView
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:text="Athletes"
               android:textSize="25dp"
               android:textStyle="bold"/>

           <com.example.debs.androidarmishandball.activity.NestedListView
               android:id="@+id/favorite_athletes_list"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"/>

       </LinearLayout>
    </ScrollView>


</LinearLayout>
