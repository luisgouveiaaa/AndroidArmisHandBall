<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="5dp"
    android:padding="8dp"
    android:background="@drawable/game_card"
    android:elevation="2dp"
    tools:context="com.example.debs.androidarmishandball.activity.GameActivity">
    <LinearLayout
        android:id="@+id/tournament_matchday_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="6dp"
        android:layout_marginRight="6dp"
        android:layout_marginBottom="4dp"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/game_tournament_info"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:text="TOURNAMENT"/>
        <TextView
            android:id="@+id/game_date_info"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="right"
            android:text="DATE"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/game_score_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@id/tournament_matchday_view">
        <ImageView
            android:id="@+id/home_club_icon"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:adjustViewBounds="true"
            android:padding="6dp"
            android:src="@drawable/club_default_icon"/>
        <TextView
            android:id="@+id/home_team_score"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:textSize="30sp"
            android:gravity="right"
            android:text="80"/>
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:textSize="30sp"
            android:gravity="center"
            android:text="-"/>
        <TextView
            android:id="@+id/visitor_team_score"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:textSize="30sp"
            android:gravity="left"
            android:text="80"/>
        <ImageView
            android:id="@+id/visitor_club_icon"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:adjustViewBounds="true"
            android:padding="6dp"
            android:src="@drawable/club_default_icon"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/team_names_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_below="@id/game_score_view"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/home_club_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginLeft="8dp"
            android:text="HOME"/>
        <TextView
            android:id="@+id/visitor_club_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginRight="8dp"
            android:gravity="right"
            android:text="VISITOR"/>

    </LinearLayout>
    <LinearLayout
        android:id="@+id/game_info_separator"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="6dp"
        android:layout_marginRight="6dp"
        android:layout_below="@id/team_names_view"
        android:orientation="vertical"
        android:background="@android:color/darker_gray"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/game_info_separator"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.5"
            android:layout_marginBottom="10dp"
            android:gravity="center"
            android:text="Goals"
            android:textStyle="bold"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <android.support.v7.widget.RecyclerView
                android:id="@+id/home_team_goal_record_view"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"/>

            <android.support.v7.widget.RecyclerView
                android:id="@+id/visitor_team_goal_record_view"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"/>
        </LinearLayout>
    </LinearLayout>



</RelativeLayout>
